@model IEnumerable<TenYears.Models.TimelineEvent>
@using TenYears.Infrastructure.Extensions
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Date
        </th>
        <th>
            DateHeadline
        </th>
        <th>
            Text
        </th>
        <th>
            Image
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @String.Format(item.Date.ToLocalTime().ToShortDateString())
        </td>
        <td>
            @item.Headline()
        </td>
        <td>
            @item.Text
        </td>
        <td>
            @item.Image
        </td>
    </tr>
}

</table>

